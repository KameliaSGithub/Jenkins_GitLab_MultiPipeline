pipeline {
    agent any

    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
    }

    stages {
        stage("Clone Repository") {
            steps {
                script {
                    git 'https://github.com/KameliaSGithub/Jenkins_GitLab_MultiPipeline.git'  // Уверете се, че URL адресът е правилен
                }
            }
        }

        stage("Initialize") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }

        stage("Build Application") {
            steps {
                script {
                    gv.buildApp() 
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                script {
                    sh 'docker build -t Jenkins_MultiBranch_Pipeline .'
                }
            }
        }

        stage("Run Tests") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testApp() 
                }
            }
        }

        stage("Run Docker Container") {
            steps {
                script {
                    sh 'docker run -d -p 8080:8080 Jenkins_MultiBranch_Pipeline'
                }
            }
        }

        stage("Deploy Application") {
            steps {
                script {
                    gv.deployApp() 
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline завърши!'
        }

        failure {
            echo 'Pipeline неуспешен!'
        }
    }
}